foreach (GridColumn col in dgv.Columns)
{
    if (!col.Visible)
        continue;

    Dictionary<String, object> row = new Dictionary<String, object>();
    row["ColumnName"] = col.FieldName;

    for (int rowHandle = 0; rowHandle < dgv.DataRowCount; rowHandle++)
    {
        object cellValue = dgv.GetRowCellValue(rowHandle, col);
        row[$"Row{rowHandle + 1}"] = cellValue;
    }
    rows.Add(row);
}